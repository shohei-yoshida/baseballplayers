<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        成績登録
      </h1>
    </div>
  </div>
</section>

<% if @score.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@score.errors.count, "エラー") %> 空白の箇所があります</h2>
    <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
　　　　<%= form_for @score do |f| %>
　　　　
        <%= f.hidden_field :player_id, value: params[:player_id] %>
        
        <div class="field">　　　
        <%= f.label :season, "年度", class: "label" %>
        <%= f.select :season, ['2019年', '2020年', '2021年',], class: 'input' %>
        </div>
        
　　　　<div class="field">　　　
        <%= f.label :hits, "安打", class: "label" %>
        <%= f.text_field :hits, class: "input" %>
        </div>
  
  　　　　<div class="field">
        <%= f.label :double, "二塁打", class: "label" %>
        <%= f.text_field :double, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :triple, "三塁打", class: "label" %>
        <%= f.text_field :triple, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :home_run, "ホームラン", class: "label" %>
        <%= f.text_field :home_run, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :avarage, "打率", class: "label" %>
        <%= f.text_field :avarage, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :points, "打点", class: "label" %>
        <%= f.text_field :points, class: "input" %>
        </div>
   
        <div class="field">
        <%= f.label :win, "勝ち", class: "label" %>
        <%= f.text_field :win, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :lose, "負け", class: "label" %>
        <%= f.text_field :lose, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :hold, "ホールド", class: "label" %>
        <%= f.text_field :hold, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :close, "セーブ", class: "label" %>
        <%= f.text_field :close, class: "input" %>
        </div>
  
       <%= f.submit '登録', class: "button is-success" %>
       <% end %>
      </div>
    </div>
  </div>
</section>