<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        選手詳細編集
      </h1>
    </div>
  </div>
</section>

<% if @player.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@player.errors.count, "エラー") %> 空白の箇所があります</h2>
    <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @player do |f| %>
          <div class="field">　　　
        <%= f.label :name, "選手名", class: "label" %>
        <%= f.text_field :name, class: "input" %>
        </div>
  
  　　　　<div class="field">
        <%= f.label :team, "所属チーム", class: "label" %>
        <%= f.select :team, ['読売ジャイアンツ', '阪神タイガース', '中日ドラゴンズ', '横浜DeNAベイスターズ', '広島東洋カープ', '東京ヤクルトスワローズ', '福岡ソフトバンクホークス', '千葉ロッテマリーンズ', '埼玉西武ライオンズ', '東北楽天ゴールデンイーグルス', '北海道日本ハムファイターズ', 'オリックス・バファローズ'], class: 'input' %>
        </div>
  
        <div class="field">
        <%= f.label :number, "背番号", class: "label" %>
        <%= f.text_field :number, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :birthday, "生年月日", class: "label" %>
        <%= f.text_field :birthday, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :old, "年齢", class: "label" %>
        <%= f.text_field :old, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :place, "出身地", class: "label" %>
        <%= f.text_field :place, class: "input" %>
        </div>
   
        <div class="field">
        <%= f.label :height, "身長", class: "label" %>
        <%= f.text_field :height, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :weight, "体重", class: "label" %>
        <%= f.text_field :weight, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :group, "血液型", class: "label" %>
         <%= f.select :group, ['A', 'B', 'AB', 'O'], class: 'input' %>
        </div>
  
        <div class="field">
        <%= f.label :position, "ポジション", class: "label" %>
        <%= f.select :position, ['投手', '捕手', '一塁手', '二塁手', '三塁手', '遊撃手', '外野手'], class: 'input' %>
        </div>
  
        <div class="field">
        <%= f.label :draht, "ドラフト年", class: "label" %>
        <%= f.text_field :draht, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :total, "プロ通算年", class: "label" %>
        <%= f.text_field :total, class: "input" %>
        </div>
  
        <div class="field">
        <%= f.label :career, "経歴", class: "label" %>
        <%= f.text_field :career, class: "input" %>
        </div>
        
        <div class="field">
        <%= f.label :image, "写真", class: "label" %>
        <%= f.attachment_field :image, class: "input" %>
        </div>
        
        <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>