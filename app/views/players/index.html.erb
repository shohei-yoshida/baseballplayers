<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        選手一覧
      </h1>
    </div>
      <div class="right">
        <%= form_tag(players_search_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag '検索', :name => nil %>
        <% end %>
      </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @players.each do |player| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by1">
                <%= link_to player_path(player) do %>
                  <%= attachment_image_tag player, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="name"><%=link_to player.name, player_path(player) %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
